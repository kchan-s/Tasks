<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="184dp"
            tools:layout_editor_absoluteY="16dp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="30sp"
                android:text="質問1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/question_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="50sp"
                android:text="通っていた小学校の名前は？"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/answer_1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="50sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="40sp"
                android:ems="10"
                android:hint="質問の答えを記入"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="30sp"
                android:text="質問2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/question_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="50sp"
                android:text="母親の出身地は？"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/answer_2"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="50sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="40sp"
                android:ems="10"
                android:hint="質問の答えを記入"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="30sp"
                android:text="質問3"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/question_text_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="50sp"
                android:text="中学2年生の時の担任の名前は？"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/answer_3"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="50sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="40sp"
                android:ems="10"
                android:hint="質問の答えを記入"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/password_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="40sp"
                android:layout_marginEnd="40sp"
                android:text="新しいパスワード"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/password_edit4"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="50sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="40sp"
                android:ems="10"
                android:inputType="textPersonName"
                tools:inputType="textPassword" />

            <TextView
                android:id="@+id/re_input2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="40sp"
                android:text="もう一度入力"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/password_edit5"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="50sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="40sp"
                android:ems="10"
                android:inputType="textPersonName"
                tools:inputType="textPassword" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginStart="80sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="80sp"
                android:text="変更完了" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>